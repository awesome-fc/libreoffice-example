RUNTIME python3
RUN fun-install apt-get install libnss3
RUN mkdir -p /mnt/auto/
RUN curl -L https://github.com/awesome-fc/fc-libreoffice/raw/master/bin/lo.tar.br -o /mnt/auto/lo.tar.br
RUN pip install brotli
RUN python -c "exec(\"import brotli, tarfile, io\nwith open('/mnt/auto/lo.tar.br', 'rb') as in_file:\n\twith tarfile.open(fileobj = io.BytesIO(brotli.decompress(in_file.read()))) as tar_file:\n\t\ttar_file.extractall(path = '/mnt/auto')\")"
RUN rm /mnt/auto/lo.tar.br